<div class= "Sign_Form">
	<h3>Iniciar Sesion</h3>
	<%=form_tag(sessions_path) do %>
		<div class="form-group">
			<%= label_tag 'Usuario' %>
			<%= text_field_tag(:username_or_email, nil, placeholder: "Usuario", class: 'form-control', width: "50%")%>
		</div>
		<div class="form-group">
			<%= label_tag 'Contrasena' %>
			<%=password_field_tag(:login_password, nil, placeholder: "Contrasena", class: 'form-control')%>
		</div>
	
		<%= submit_tag "Log In", class: 'btn btn-success btn-lg' %>
	<% end %>
</div>
